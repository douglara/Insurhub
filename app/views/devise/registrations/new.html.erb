<div class="main-content">
  <div clas="row">
    <section class="section">
      <div class="container">
        <div class="row">
          <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
            <div class="login-brand">
            </div>
            <div class="card card-primary">
              <div class="card-header"><h4>Sign up</h4></div>

              <div class="card-body">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <div class="row">
                    <div class="form-group col">
                      <%= f.label :full_name %><br />
                      <%= f.text_field :full_name, required: true, autofocus: true, autocomplete: "name", class:"form-control" %>
                      <%= bootstrap_errors_list(resource, :full_name) %>
                    </div>
                  </div>

                  <div class="form-group">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class:"form-control" %>
                    <%= bootstrap_errors_list(resource, :email) %>
                  </div>

                  <div class="row mt-4">
                    <div class="form-group col-6">
                      <%= f.label :password %><br />
                      <%= f.password_field :password, required: true, autocomplete: "off", class:"form-control",type:"password" %>
                      <%= bootstrap_errors_list(resource, :password) %>
                    </div>
                    <div class="form-group col-6">
                      <%= f.label :password_confirmation %><br />
                      <%= f.password_field :password_confirmation, required: true, autocomplete: "off", class:"form-control",type:"password" %>
                      <%= bootstrap_errors_list(resource, :password_confirmation) %>
                    </div>
                  </div>

                  <div class="form-group">
                    <%= f.submit "Sign up", class:"btn btn-primary btn-lg btn-block" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>