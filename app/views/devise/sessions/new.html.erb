<div class="main-content">
  <div clas="row">
    <section class="section">
      <div class="container">
        <div class="row">
          <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
            <div class="login-brand">
            </div>
            <div class="card card-primary">
              <div class="card-header"><h4>Login</h4></div>
              <div class="card-body">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), role:"form", class:"needs-validation") do |f| %>

                  <div class="form-group">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", tabindex:"1", required:"" , placeholder: "E-mail", type: "email" %>
                    <%= bootstrap_errors_list(resource, :email) %>
                  </div>

                  <div class="form-group">
                    <%= f.label :password %><br />
                    <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Senha",type:"password", tabindex:"2" %>
                    <%= bootstrap_errors_list(resource, :password) %>
                  </div>

                  <div class="form-group">
                    <%= f.submit "Sign in", class:"btn btn-primary btn-lg btn-block", tabindex:"3" %>
                  </div>
                <% end %>

              </div>
            </div>
            <div class="mt-5 text-muted text-center">
              Don't have account? <%= link_to "Create account", new_registration_path(resource_name) %>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>